<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Accessibility Service Permission -->
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE" />
    
    <!-- System Alert Window Permission (for debugging) -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <!-- Internet Permission (for model updates if needed) -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Wake Lock Permission (for background processing) -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".SentinelApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sentinel"
        tools:targetApi="31">

        <!-- Accessibility Service -->
        <service
            android:name=".service.WhatsAppMonitoringService"
            android:exported="true"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <!-- No activities - this is a UI-less app that only runs as an accessibility service -->

    </application>

</manifest>
